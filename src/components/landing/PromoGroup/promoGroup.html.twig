<div class="promo-group">
  <h2 class="promo-group__main-heading">{{ title }}</h2>
  {% for card in cards %}
    <div class="promo-group__card">
      <h3 class="promo-group__sub-heading">
        {% if card.promo_link is defined %}
          <a class="promo-group__title-link" href="{{ card.promo_link }}">{{ card.title }}</a>
        {% else %}
          {{ card.title }}
        {% endif %}
      </h3>
      {% if card.description is defined %}
        <p class="promo-group__description">{{ card.description }}</p>
      {% endif %}
      {% if card.link_list is defined %}
        <ul class="promo-group__list">
          {% for link in card.link_list %}
            <li class="promo-group__list-item">
              <a class="promo-group__list-link" href="{{ link.url }}">{{ link.label }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  {% endfor %}
</div>
