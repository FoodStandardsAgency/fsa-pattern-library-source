<div class="service-links">
  <div class="service-links__container">
    {% if title or description %}
    <div class="service-links__text-row">
      <div class="service-links__text-wrapper">
      {% if title %}    
          <h2 class="service-links__title">{{ title }}</h2>
      {% endif %}
      {% if description %}
        <p class="service-links__description">{{ description }}</p>
      </div>
      {% endif %}
    </div>
    {% endif %}
    <ul class="service-links__cards">
      {% for link in links %}
        <li class="service-links__card service-links__card--{{ columns }}">
          <a href="{{ link.url }}" class="service-links__anchor">{{ link.label }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
