<div class="landing-links">
  <div class="landing-links__container">
    <div class="landing-links__row">
      <div class="landing-links__title">
        <h2>{{ title }}</h2>
      </div>
    </div>
    <div class="landing-links__row">
      {% for item in items %}
      <div class="landing-links__item">
        <a href={{ item.url }}>
          <div class="landing-links__svg">
            {{ item.svg }}
          </div>
          <span class="landing-links__link">{{ item.linkText }}</span>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</div>