<form class="search-bar" action="{{ searchLink }}" autocomplete="off">
  <label class="search-bar__label" for="search">{{ searchText }}</label>
  <input class="search-bar__box" value="{{ searchValue }}" name="keywords" type="search" id="search">
  <button class="search-bar__submit" aria-label="search">
    <span class="search-bar__span visually-hidden">{{ searchText }}</span>
  </button>
</form>
