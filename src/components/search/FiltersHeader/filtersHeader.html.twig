<div class="search-filters">
  <button class="search-filters__button">{{ button_text }}</button>
  <div class="search-filters__content">
    <div class="search-filters__return-wrapper">
      <button class="search-filters__return">{{ link_text }}</button>
    </div>
    <h2 class="search-filters__title">{{ title }}</h2>
    {% for accordion in accordions %}
      {% include "@components/components/search/Accordion/accordion.html.twig" with {
        title: accordion.title,
        name: accordion.name,
        fields: accordion.fields,
        selected: accordion.selected,
      } %}
    {% endfor %}
  </div>
</div>
