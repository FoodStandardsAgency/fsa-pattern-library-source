<div class="chart-block">
  <h3 class="chart-block__name">{{ name }}</h3>
  {% if image and content %}
    <div class="chart-block__switch-button chart-block__switch-button--to-table">
      {% include "@components/components/general/Button/button.html.twig" with {
      type: 'primary',
      element: 'button',
      label: toTable,
    } %}
    </div>
    <div class="chart-block__switch-button chart-block__switch-button--to-chart">
      {% include "@components/components/general/Button/button.html.twig" with {
      type: 'primary',
      element: 'button',
      label: toChart,
    } %}
    </div>
  {% endif %}
  {% if image %}
    <div class="chart-block__image">
      <img src={{ image.url }} alt="{{ image.alt }}"/>
    </div>
  {% endif %}
  {% if content %}
    <div class="chart-block__content {{ image ? " chart-block__content--with-image" : "" }}">
      {{ content }}
    </div>
  {% endif %}
  <div class="chart-block__download-label">{{ downloadThis }}</div>
  <div class="chart-block__download-buttons">
    {% for link in links %}
      {% include '@components/components/general/Button/button.html.twig' with {
        type: 'primary',
        url: link.url,
        label: link.label,
        element: 'link',
        target: '_blank',
      } %}
    {% endfor %}
  </div>
</div>
