{% set prev_id_is_defined = prev_id is defined and prev_id is not empty %}

<div class="multistep-function">
  <div class="multistep-function__container">
    
    {% if prev_label %}
      {% if prev_link %}
        <a href="{{ prev_link }}" class="multistep-function__previous" {{ prev_id_is_defined ? 'id="' ~ prev_id ~ '"' : '' }}>{{ prev_label }}</a>
      {% else %}
        <input type="submit" class="multistep-function__previous" {{ prev_id_is_defined ? 'id="' ~ prev_id ~ '"' : '' }} name="{{ prev_label|striptags|replace({" ": "-"})|lower }}" value="{{ prev_label }}" />
      {% endif %}
    {% endif %}
  
    {% include '@components/components/general/Button/button.html.twig' with { 
      type: 'primary',
      label: next_label,
      element: 'input',
      id: next_id,
    } %}

  </div>
</div>
