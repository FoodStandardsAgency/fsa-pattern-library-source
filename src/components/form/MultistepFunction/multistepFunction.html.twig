<div class="multistep-function">
  <div class="multistep-function__container">
    
    {% if prev_label %}
      {% if prev_link %}
        <a href="{{ prev_link }}" class="multistep-function__previous" onClick="{{ prev_callback is defined ? prev_callback ~ '(); return false;' : '' }}">{{ prev_label }}</a>
      {% else %}
        <input type="submit" class="multistep-function__previous" name="{{ prev_label|striptags|replace({" ": "-"})|lower }}" value="{{ prev_label }}"  onClick="{{ prev_callback is defined ? prev_callback ~ '(); return false;' : '' }}" />
      {% endif %}
    {% endif %}
  
    {% include '@components/components/general/Button/button.html.twig' with { 
      type: 'primary',
      label: next_label,
      element: 'input',
      callback: next_callback,
    } %}

  </div>
</div>
