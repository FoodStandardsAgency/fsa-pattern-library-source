{% set spaceless_name = name|replace({" ": ""}) %}
{% set id = "checkbox__description--" ~ spaceless_name %}
<fieldset class="checkbox {{ error ? "checkbox--error" : "" }}" aria-describedby={{ description is defined ? id : "" }}>
  {% if title is defined %}
    <legend class="checkbox__legend">
      {{ title }}<span class="checkbox__required">{{ required ? "(" ~ required ~ ")" : "" }}</span>
    </legend>
  {% endif %}
  {% if description is defined %}
    <p class="checkbox__description" id={{ id }}>{{ description }}</p>
  {% endif %}
  <div class="checkbox__fields">
    {% for field in fields %}
      <div class="checkbox__field">
        <input class="checkbox__input" type="checkbox" name="{{ name }}" value="{{ field.value }}" id="{{ field.id }}" {{ required ? "required" : "" }}>
        <label class="checkbox__label" for="{{ field.id }}">{{ field.label }}</label>
      </div>
    {% endfor %}
  </div>
</fieldset>