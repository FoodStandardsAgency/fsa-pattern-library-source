<div class="error-box">
  <div class="error-box__container">
    <h1 class="error-box__title">{{ title }}</h1>
    {% for error in errorList %}
    <p class="error-box__label">{{ error.label }}</p>

    {% for field in error.fields %}
      <a href="#{{field.id}}" class="error-box__field">
        {{ field.label }}
      </a>
    {% endfor %}

    {% endfor %}
  </div>
</div>