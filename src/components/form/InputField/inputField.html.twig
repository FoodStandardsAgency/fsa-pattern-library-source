<div class="input-field{{ error ? " input-field--error" : "" }}{{ states ? ' js-form-item js-form-item-' ~ name : ''}}">
  <label class="input-field__label" for="{{ name }}-field">{{ label }}
    <span class="input-field__required">{{ required ? "(" ~ required ~ ")" : "" }}</span>
  </label>
  {% if error %}
  <div class="input-field__error-message">{{ errorMessage }}</div>
  {% endif %}
  <div class="input-field__wrapper">
    {% if prefix %}
      <span class="input-field__prefix">{{ prefix }}</span>
    {% endif %}
    {% if value %}
      <input {{ required ? required : "" }} class="input-field__input" type="{{ type }}" id="{{ name }}-field" name="{{ name }}" value="{{ value }}" aria-required={{ required ? "true" : "false" }} {{ states ? "data-drupal-states='" ~ states ~ "'" : ""}} />
    {% else %}
      <input {{ required ? required : "" }} class="input-field__input" type="{{ type }}" id="{{ name }}-field" name="{{ name }}" aria-required={{ required ? "true" : "false" }}  {{ states ? "data-drupal-states=" ~ states : ""}} />
    {% endif %}
  </div>
  <div class="input-field__caption">{{ caption }}</div>
</div>