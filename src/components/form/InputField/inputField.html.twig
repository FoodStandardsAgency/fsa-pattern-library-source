<div class="input-field {{ error ? "input-field--error" : "" }}">
    <label class="input-field__label" for="email-field">{{ label }}
       <span class="input-field__required">{{ required ? "(" ~ required ~ ")" : "" }}</span>
    </label>
    {% if error %}
    <div class="input-field__error-message">{{ errorMessage }}</div>
    {% endif %}
    {% if value %}
        <input required class="input-field__input" type="text" id="{{ name }}-field" name="{{ name }}" value="{{ value }}" aria-required="true" />
    {% else %}
        <input required class="input-field__input" type="text" id="{{ name }}-field" name="{{ name }}" aria-required="true" />
    {% endif %}
    <div class="input-field__caption">{{ caption }}</div>
</div>