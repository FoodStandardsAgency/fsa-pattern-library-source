<nav class="breadcrumb">
  <p class="breadcrumb__label visually-hidden">Breadcrumb</p>
  <div class="breadcrumb__items {{ expanded ? "expanded" : "" }}">
    {% for item in items %}
      <div class="breadcrumb__item">
        {% if item.url is not null %}
          <a href={{ item.url }} class="breadcrumb__link">{{ item.label }}</a>
        {% else %}
          <span>{{ item.label }}</span>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  <a href="#" class="breadcrumb__mobile-overlay" aria-expanded="{{ expanded }}">
    <span class="visually-hidden">Expand breadcrumb navigation</span>
  </a>
</nav>
{% if withLogin %}
  <div>
    {% if isLoggedIn %}
    {% else %}
      <span>{{ 'Already have a subscription?' }}</span>
      {% include '../Button/button.html.twig' with { is_anchor: true, label: 'Sign In', url: '#' } %}
    {% endif %}
  </div>
{% endif %}