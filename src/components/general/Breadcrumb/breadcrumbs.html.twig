<div class="breadcrumb {{ expanded ? "expanded" : "collapsed" }} {{ subscription is defined ? (subscription.isLoggedIn ? "login" : "logout") : "full" }}">
  <div class="breadcrumb__left">
    <p class="breadcrumb__label visually-hidden">Breadcrumb</p>
    <div class="breadcrumb__items">
      {% for item in items %}
        <div class="breadcrumb__item">
          {% if item.url %}
            <a href="{{ item.url }}" class="breadcrumb__link">{{ item.text }}</a>
          {% else %}
            <span>{{ item.text }}</span>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    <a href="#" class="breadcrumb__mobile-overlay" aria-expanded="{{ expanded ? 'true' : 'false' }}">
      <span class="visually-hidden">Expand breadcrumb navigation</span>
    </a>
  </div>
  {% if subscription is defined %}
    <div class="breadcrumb__right">
      {% if subscription.isLoggedIn %}
        <a href="{{ subscription.subscriptionLink }}" class="breadcrumb__link">{{ subscription.subscriptionLabel }}</a> |
        <a href="{{ subscription.logOutLink }}" class="breadcrumb__link">{{ subscription.logOutLabel }}</a>
      {% else %}
        <span class="breadcrumb__label">{{ subscription.loggedOutLabel }}</span>
        {% include '@components/components/general/Button/button.html.twig' with { 
          type: 'primary',
          label: subscription.loggedOutButtonLabel,
          url: subscription.loggedOutButtonLink,
          is_anchor: true,
          element: 'link' } %}
      {% endif %}
    </div>
  {% endif %}
</div>
