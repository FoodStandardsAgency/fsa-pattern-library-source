<div class="header">
  <div class="header__grid-container">
    <div class="header__grid-row">
      <div class="header__top">
        <ul class="header__languages">
          <li class="header__language">
            <a href="{{ english_link }}" class="header__language-link">{{ english_label }}</a>
          </li>
          <li class="header__language">
            <a href="{{ welsh_link }}" class="header__language-link">{{ welsh_label }}</a>
          </li>
        </ul>
      </div>
      <div class="header__bottom">
        <a href="{{ logo_link }}" class="header__logo">
          <span class="header__logo-label visually-hidden">{{ logo_label }}</span>
          <div class="header__logo-svg {{ english ? " header__logo-svg--english" : " header__logo-svg--welsh" }}" aria-hidden=" true"></div>
        </a>
        <div class="header__links">
          <div class="header__links-wrapper">
            <li class="header__links-item">
              <a href="{{ contact_link }}" class="header__contact">{{ contact_label }}</a>
            </li>
            <li class="header__links-item">
              <a href="{{ report_link }}" class="header__report">{{ report_label }}</a>
            </li>
          </div>
          <li class="header__links-item">
            <a href="{{ ratings_link }}" class="header__ratings" target="_blank">{{ ratings_label }}</a>
          </li>
        </div>
        <div class="header__search-bar-wrapper">
          <div class="header__search-bar--full">{% include "../../search/SearchBar/searchBar.html.twig" %}</div>
          <a class="header__search-bar--icon" href="{{ search_link }}">
            <span class="visually-hidden header__search-bar-label">{{ search_label }}</span>
            <div aria-hidden="true" class="header__search-svg"></div>
          </a>
        </div>
        <button class="header__menu" aria-expanded={{ expanded }} aria-controls="main-menu"></button>
      </div>
    </div>
  </div>
</div>
