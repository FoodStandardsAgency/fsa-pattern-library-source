{% set target_is_defined = target is defined and target is not empty %}
{% set id_is_defined = id is defined and id is not empty %}

{% if element == 'link' %}
  <a href="{{ url }}" class="button button--{{ type }}" {{ id_is_defined ? 'id="' ~ id ~ '"' : '' }} {{ target_is_defined ? 'target="' ~ target ~ '"' : '' }} {{ download ? ' download' : '' }}>
    {{ label }}
  </a>
{% elseif element == 'button' %}
  <button class="button button--event button--{{ type }}" {{ id_is_defined ? 'id="' ~ id ~ '"' : '' }}>
    {{ label }}
  </button>

{% elseif element == 'input' %}
  <input type="submit" class="button button--event button--{{ type }}" {{ id_is_defined ? 'id="' ~ id ~ '"' : '' }} name="{{ label|striptags|replace({" ": "-"})|lower }}" value="{{ label }}">
{% endif %}
